<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffdd7"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="choices.pbl.choices.MainActivity_menu"
    tools:showIn="@layout/activity_main_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginVertical="15dp"
                    android:layout_weight="1"
                    android:text="Nome do UsÃ¡rio" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"

                app:srcCompat="@drawable/choices" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPerguntar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:padding="2dp"
                app:srcCompat="@drawable/perg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivEscolher"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:padding="2dp"
                app:srcCompat="@drawable/es" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivConquistas"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:padding="5dp"
                app:srcCompat="@drawable/conq" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
